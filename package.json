{
  "name": "react-cli",
  "description": "Command line interface for rapid React development.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap",
    "lint": "eslint --fix packages/**/*.js",
    "pub": "lerna publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ongw20/react-cli.git"
  },
  "keywords": [
    "react",
    "cli",
    "react-app",
    "react-cli"
  ],
  "author": "ong <ongw20@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ongw20/react-cli/issues"
  },
  "homepage": "https://github.com/ongw20/react-cli#readme",
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.3"
  }
}
