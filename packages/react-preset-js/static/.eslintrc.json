{
  "parser": "babel-eslint",
  "env": {
    "jest": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
    "space-before-function-paren": ["error", "never"],
    "no-console": "warn",
    "no-debugger": "error"
  }
}
