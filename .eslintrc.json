{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "standard",
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
    "space-before-function-paren": ["error", "never"]
  }
}
